# Environment Configuration Example
# Copy this file to .env and update the values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/au_scholarship"  # PostgreSQL
# DATABASE_URL="file:./dev.db"  # SQLite for development
# DATABASE_URL="mysql://user:password@localhost:3306/au_scholarship"  # MySQL

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="development"  # development | production | test
PORT=3000

# API Configuration
API_PREFIX="api"
API_VERSION="v1"

# CORS
CORS_ORIGIN="http://localhost:5173"  # Frontend URL

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Email Configuration
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASS="your-app-password"
MAIL_FROM="noreply@africau.edu"

# Logging
LOG_LEVEL="info"  # error | warn | info | debug

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TTL=60  # seconds
RATE_LIMIT_MAX=100  # max requests per TTL

# Frontend URL (for email links, etc.)
FRONTEND_URL="http://localhost:5173"

# Admin Configuration
DEFAULT_ADMIN_EMAIL="admin@africau.edu"
DEFAULT_ADMIN_PASSWORD="AdminPassword123!"