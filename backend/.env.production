# Production Environment Configuration for AWS Elastic Beanstalk
# Set these as Environment Variables in EB Console

# Database
DATABASE_URL="file:/var/app/current/prod.db"

# JWT Configuration - SET IN EB ENVIRONMENT VARIABLES
JWT_SECRET="your-production-jwt-secret-change-this"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="production"
PORT=8081

# API Configuration
API_PREFIX="api"
API_VERSION="v1"

# CORS - UPDATE WITH YOUR FRONTEND DOMAIN
CORS_ORIGIN="https://your-frontend-domain.com"

# File Upload
UPLOAD_DIR="/var/app/current/uploads"
MAX_FILE_SIZE=10485760

# Email Configuration - SET IN EB ENVIRONMENT VARIABLES
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASS="your-app-password"
MAIL_FROM="noreply@africau.edu"

# Logging
LOG_LEVEL="warn"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Frontend URL - UPDATE WITH YOUR FRONTEND DOMAIN
FRONTEND_URL="https://your-frontend-domain.com"

# Admin Configuration - SET IN EB ENVIRONMENT VARIABLES
DEFAULT_ADMIN_EMAIL="admin@africau.edu"
DEFAULT_ADMIN_PASSWORD="ChangeThisSecurePassword123!"